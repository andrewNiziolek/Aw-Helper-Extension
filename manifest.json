{
  "manifest_version": 3,
  "version": "2.3",
  "author": "Andrew Niziolek",

  "name": "Awin Helper",
  "description": "This is a community-developed extension to support Awin Staff in their daily responsibilities.",

  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },

  "background": {
    "service_worker": "background.js"
  },

  "action": {"default_popup": "popup.html"},

  "permissions": 
  ["storage", 
  "tabs",
  "activeTab",
  "scripting",
  "tabGroups"
  ],

  "host_permissions":
  [
    "http://*/",
    "https://*/"
  ],

  "web_accessible_resources": [
  {
    "resources": ["scripts/injected.js", "assets/icon48.png"],
    "matches": ["<all_urls>"]
  }
  ],

  "content_scripts": [
  {
    "matches": ["https://*.lightning.force.com/*"],
    "js": ["scripts/bootstrap.js"],
    "type": "module",
    "run_at": "document_idle"
  }
  ]

}